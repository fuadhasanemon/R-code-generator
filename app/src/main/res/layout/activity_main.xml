<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#212121"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="shaunhossain.com.rcodegl.MainActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/gen"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="10dp"
                    android:text="Generate a unique location RCODE for yourself, friends and family"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="@android:color/holo_green_light"
                    android:textStyle="bold" />

                <mehdi.sakout.fancybuttons.FancyButton
                    android:id="@+id/gen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="1dp"
                    android:minWidth="200dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="10dp"
                    fancy:fb_borderColor="@android:color/holo_blue_light"
                    fancy:fb_borderWidth="2dp"
                    fancy:fb_defaultColor="#AF3b5998"
                    fancy:fb_focusColor="#5474b8"
                    fancy:fb_radius="5dp"
                    fancy:fb_text="RCode\nGenerator"
                    fancy:fb_textColor="#FFFFFF"
                    fancy:fb_textFont="fonts/Roboto-Black.ttf"
                    fancy:fb_textSize="30sp" />

                <TextView
                    android:id="@+id/textLoc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/gen"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="10dp"
                    android:text="@string/enter_rcode_to_locate_on_map_or_to_navigate_to_location"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="@android:color/holo_green_light"
                    android:textStyle="bold" />

                <mehdi.sakout.fancybuttons.FancyButton
                    android:id="@+id/loc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textLoc"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="1dp"
                    android:minWidth="200dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="10dp"
                    fancy:fb_borderColor="@android:color/holo_blue_light"
                    fancy:fb_borderWidth="2dp"
                    fancy:fb_defaultColor="#AF3b5998"
                    fancy:fb_focusColor="#5474b8"
                    fancy:fb_radius="5dp"
                    fancy:fb_text="RCode\nLocator"
                    fancy:fb_textColor="#FFFFFF"
                    fancy:fb_textFont="fonts/Roboto-Black.ttf"
                    fancy:fb_textSize="30sp" />

        </RelativeLayout>

</RelativeLayout>
